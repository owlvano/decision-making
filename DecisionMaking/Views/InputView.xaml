<UserControl x:Class="DecisionMaking.Views.InputView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vml="clr-namespace:DecisionMaking.VML"
             xmlns:data="clr-namespace:DecisionMaking.Models"
             xmlns:local="clr-namespace:DecisionMaking.Views"
             xmlns:dg2d="clr-namespace:DataGrid2DLibrary;assembly=DataGrid2DLibrary"
             vml:ViewModelLocator.AutoHookedUpViewModel="True"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel>
        <DockPanel>
            <dg2d:DataGrid2D Name="input_dataGrid2D"
                 ItemsSource2D="{Binding CostMatrixSource}"/>
        </DockPanel>
    </StackPanel>
</UserControl>
